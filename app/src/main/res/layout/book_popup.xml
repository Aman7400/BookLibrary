<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_gravity="center"
    android:orientation="vertical"

    android:padding="20dp"
    android:background="@color/foster_white"

    android:layout_height="wrap_content"
    android:minHeight="200dp"
    >

    <TextView
        android:textAllCaps="true"

        android:id="@+id/popupTitle"
        android:textSize="30sp"
        android:fontFamily="@font/ubuntu_bold"
        android:textColor="@color/black"
        android:text="The Adventures of Tom Sawyer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/popupAuthor"
        android:layout_width="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Charles Dickens"
        android:textSize="20dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:drawableTint="@color/grey_light"
            android:fontFamily="@font/poppins"
            android:drawableLeft="@drawable/ic_baseline_watch_later_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />
        <TextView

            android:layout_marginLeft="5dp"
            android:fontFamily="@font/poppins"
            android:text="06 Feb"
            android:id="@+id/addedOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left" />

    </LinearLayout>



    <TextView
        android:id="@+id/popupReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Loved It 😍"
        android:textSize="30sp"
        />


    <LinearLayout
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:text="Update"
            android:id="@+id/updateBook"
            android:backgroundTint="@color/orange_red"
            android:textColor="@color/white"
            android:fontFamily="@font/ubuntu_bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"/>
        <Button
            android:backgroundTint="@color/orange_red"
            android:id="@+id/deleteBook"
            android:textColor="@color/white"
            android:text="Remove"
            android:fontFamily="@font/ubuntu_bold"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>









</LinearLayout>